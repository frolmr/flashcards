<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Флэшкарточкер', root_path, class: "navbar-brand" %>
      </div>
      <div class="navbar-coolapse">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li>
            <%= link_to 'Карточки', cards_path %>
          </li>
          <li>
            <%= link_to 'Колоды', decks_path %>
          </li>
          <li>
            <%= link_to "Профиль", current_user %>
          </li>
          <li>
            <%= link_to "Выйти", :logout, method: :post %>
          </li>
          <% else %>
          <li>
            <%= link_to "Зарегестрироваться", new_user_path %>
          </li>
          <li>
            <%= link_to "Войти", :login %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
